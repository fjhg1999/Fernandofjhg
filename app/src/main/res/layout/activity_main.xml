<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tbhConversor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/tabLongitud"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:inputType="numberDecimal"
                    android:id="@+id/lblDelongitud"
                    android:text="DE"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:inputType="numberDecimal"
                    android:id="@+id/lblAlongitud"
                    android:text="A"
                    android:layout_below="@id/lblDelongitud"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnDElongitud"
                    android:entries="@array/spnLongitud"
                    android:layout_alignBaseline="@id/lblDelongitud"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblDelongitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnAlongitud"
                    android:entries="@array/spnLongitud"
                    android:layout_alignBaseline="@id/lblAlongitud"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblAlongitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/txtCantidadLongitud"
                    android:inputType="numberDecimal"
                    android:layout_below="@+id/spnAlongitud"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad a convertir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnConvertirLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCantidadLongitud"
                    android:layout_marginTop="40dp"
                    android:text="convertir" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tabVolumen"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/lblDEVolumen"
                    android:text="DE"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/lblAVolumen"
                    android:text="A"
                    android:layout_below="@id/lblDEVolumen"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnDEVolumen"
                    android:entries="@array/spnVolumen"
                    android:layout_alignBaseline="@id/lblDEVolumen"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblDEVolumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnAVolumen"
                    android:entries="@array/spnVolumen"
                    android:layout_alignBaseline="@id/lblAVolumen"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblAVolumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/txtCantidadDeVolumen"
                    android:layout_below="@+id/spnAVolumen"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad a convertir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnConvertirVolumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCantidadDeVolumen"
                    android:layout_marginTop="40dp"
                    android:text="convertir" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tabMasa"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblDEMasa"
                    android:text="DE:"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/lblAMasa"
                    android:text="A:"
                    android:layout_below="@id/lblDEMasa"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnDEMasa"
                    android:entries="@array/spnMasa"
                    android:layout_alignBaseline="@id/lblDEMasa"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblDEMasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnAMasa"
                    android:entries="@array/spnMasa"
                    android:layout_alignBaseline="@id/lblAMasa"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblAMasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/txtCantidadDeMasa"
                    android:layout_below="@+id/spnAMasa"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad a convertir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnConvertirMasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCantidadDeMasa"
                    android:layout_marginTop="40dp"
                    android:text="convertir" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tabAlmacenamiento"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblDEAlmacenamiento"
                    android:text="DE:"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:id="@+id/lblAAlmacenamiento"
                    android:text="A:"
                    android:layout_below="@id/lblDEAlmacenamiento"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnDEAlmacenamiento"
                    android:entries="@array/spnAlmacenamiento"
                    android:layout_alignBaseline="@id/lblDEAlmacenamiento"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblDEAlmacenamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnAAlmacenamiento"
                    android:entries="@array/spnAlmacenamiento"
                    android:layout_alignBaseline="@id/lblAAlmacenamiento"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblAAlmacenamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/txtCantidadDeAlmacenamiento"
                    android:layout_below="@+id/spnAAlmacenamiento"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad a convertir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnConvertirAlmacenamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCantidadDeAlmacenamiento"
                    android:layout_marginTop="40dp"
                    android:text="convertir" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tabTransmision"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblDETransmision"
                    android:text="DE:"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/lblATrasmision"
                    android:text="A:"
                    android:layout_below="@id/lblDETransmision"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnDETransmision"
                    android:entries="@array/spnTransmision"
                    android:layout_alignBaseline="@id/lblDETransmision"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblDETransmision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spnATransmision"
                    android:entries="@array/spnTransmision"
                    android:layout_alignBaseline="@id/lblATrasmision"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblATrasmision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/txtCantidadDeTransmision"
                    android:layout_below="@+id/spnATransmision"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad a convertir"
                    android:layout_width="match_parent"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnConvertirTransmision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCantidadDeTransmision"
                    android:layout_marginTop="40dp"
                    android:text="convertir" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tabMonedas"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblDEMonedas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:text="DE:" />

                <TextView
                    android:id="@+id/lblAMonedas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblDEMonedas"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="A:" />

                <Spinner
                    android:id="@+id/spnDEMonedas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/lblDEMonedas"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblDEMonedas"
                    android:entries="@array/spnMonedas" />

                <Spinner
                    android:id="@+id/spnAMonedas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/lblAMonedas"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblAMonedas"
                    android:entries="@array/spnMonedas" />

                <EditText
                    android:id="@+id/txtCantidadDeMonedas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_below="@+id/spnAMonedas"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad a convertir" />

                <Button
                    android:id="@+id/btnConvertirMonedas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCantidadDeMonedas"
                    android:layout_marginTop="40dp"
                    android:text="convertir" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tabTiempo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblDETiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:text="DE:" />

                <TextView
                    android:id="@+id/lblATiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblDETiempo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="A:" />

                <Spinner
                    android:id="@+id/spnDETiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/lblDETiempo"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblDETiempo"
                    android:entries="@array/spnTiempo" />

                <Spinner
                    android:id="@+id/spnATiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/lblATiempo"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lblATiempo"
                    android:entries="@array/spnTiempo" />

                <EditText
                    android:id="@+id/txtCantidadDeTiempo"
                    android:layout_width="match_parent"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spnATiempo"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad a convertir" />

                <Button
                    android:id="@+id/btnConvertirTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCantidadDeTiempo"
                    android:layout_marginTop="40dp"
                    android:text="convertir" />

            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>
</TabHost>